<div class = "container">
  <div class = "title text-center">ユーザー</div>
  <table class = "table table-bordered">
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>退会ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user) %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_valid == true %>
            <p>退会</p>
          <% else %>
            <p>有効</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class = "py-3">
    <%= paginate @users %>
  </div>
</div>