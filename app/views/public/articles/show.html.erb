<div class = "container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>題名:</strong>
    <%= @article.title %>
  </p>

    <p>
    <strong>タグ:</strong>
    <% @article.tags.each do |tag| %>
      <%= tag.tag_name %>
    <% end %>
  </p>

  <p>
    <strong>目的:</strong>
    <%= @article.sub_title %>
  </p>

  <p>
    <strong>内容:</strong>
    <%= markdown(@article.body).html_safe %>
  </p>

  <%= link_to "", home_path, class: "fas fa-arrow-circle-left" %>
  <%= link_to "", edit_article_path(@article), class: "fas fa-edit" %>
  <%= link_to "", @article, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "far fa-trash-alt" %>

  <!--SNSシェアボタン機能-->
  <%= social_share_button_tag(@article.title) %>

  <!--ブックマーク機能-->
  <div id="bookmark_button_<%= @article.id %>">
    <%= render "public/bookmarks/bookmark", article: @article  %>
  </div>

  <!--星評価の平均値-->
  <%= render "public/articles/rate", article: @article %>
  <%= @article.avg_score %>点

  <!--コメント機能-->
  <div id = "comment_area", class="w-100 p-3">
    <% if user_signed_in? %>
      <%= render "public/comments/form", comment: @comment %>
    <% end %>
  </div>

  <!--コメント一覧-->
  <div class="w-100 p-3">
     <%= render "public/comments/index", comments: @comments, article: @article %>
  </div>


