<div class = "container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= markdown(@article.body).html_safe %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Destroy', @article, method: :delete, data: { confirm: '本当に削除しますか？' } %> |
  <%= link_to 'Back', home_path %>
</div>