
    <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading">アウトプットフォーム</div>
        <div class="panel-body">

            <%= form_with(model: article, local: true) do |f| %>

            <div class="form-group">
              <label class="control-label">題名</label>
             　<%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
               <label class="control-label">タグ</label>
              <%= f.text_field :tag_names, placeholder:",で区切ってください" %>
            </div>

            <div class="form-group">
              <label class="control-label">目的</label>
              <%= f.text_field :sub_title, class: "form-control" %>
            </div>

            <div class="form-group">
              <label class="control-label">内容</label>
              <%= f.text_area :body, class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit %>
            </div>

            <% end %>
        </div>
      </div>
    </div>