
  <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to article.title, article %>
        </h4>
        <h6 class="card-subtitle mb-2 text-muted">
          <% article.tags.each do |tag| %>
            <%= link_to tag.tag_name, search_path(keyword: tag.tag_name) %>
          <% end %>
        </h6>
        <h6 class="card-subtitle mb-2 text-muted">
          <%= article.sub_title %>
        </h6>
        <p class="card-text">
          <%= markdown(article.body).html_safe %>
        </p>
      </div>
    </div>