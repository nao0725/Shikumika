<div class="container">
<div class = "title text-center">
  <% if @user == current_user %>
    <div class = "title text-center">My Followers List</div>
  <% else %>
    <div class = "title text-center"><%= @user.nickname %>さんのFollowers List</div>
  <% end %>
</div>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="row row-eq-height">
          <div class="col-md-12 mb-3 text-center">
            <div class="card grow">
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to user_path(user), class: "link" do %>
                    <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size:"50x50", class: "rounded-circle" %>
                    <%= user.nickname %>
                  <% end %>
                </h4>
                <p class="card-text"><%= user.introduction %></p>
                  <div id = "follow_btn">
                    <p><%= render "public/relationships/follow_btn", user: user %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
    <% end %>
  <% else %>
      <p class = "text-center">ユーザーはいません</p>
  <% end %>
</div>
  

