<div class = "container">
  <h1>マイページ</h1>

  <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", size:'200x200' %>

  <h5>名前</h5>
  <%= @user.name %>

  <h5>ニックネーム</h5>
  <%= @user.nickname %>

  <h5>自己紹介</h5>
  <%= @user.introduction %>

  <h5>投稿数</h5>
  <%= @articles.count %>

  <h5>フォロー数</h5>
  <h5>フォロワー数</h5>

  <% if @user == current_user %>
    <%= link_to "ブックマークした投稿はこちら", article_bookmarks_path(@user.id) , class:"btn btn-outline-secondary"%>
    <%= link_to "", edit_user_path(current_user) , class:"btn btn-outline-secondary fas fa-user-cog"%>
  <% end %>


  <h3>自分の投稿一覧</h3>
  <% @articles.each do |article| %>
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= link_to article.title, article %></h4>
      <h6 class="card-subtitle mb-2 text-muted">
        <% article.tags.each do |tag| %>
         <%= tag.tag_name %>
        <% end %>
      </h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= article.sub_title %></h6>
      <p class="card-text"><%= markdown(article.body).html_safe %></p>
    </div>
      <% end %>
  </div>
  <div class = "pagination-sm">
    <%= paginate @articles %>
  </div>
</div>
