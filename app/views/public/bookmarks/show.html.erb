<table>
  <display>ブックマーク一覧</display>
   <% @bookmarks.each do |bookmark| %>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to article_path(bookmark.article) do %>
            <% bookmark.article.title %>
          <% end %>
        </h4>
        <h6 class="card-subtitle mb-2 text-muted">
          <% bookmark.article.tags.each do |tag| %>
           <%= tag.tag_name %>
          <% end %>
        </h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= bookmark.article.sub_title %></h6>
        <p class="card-text"><%= markdown(bookmark.article.body).html_safe %></p>
      </div>
    </div>
    <% end %>

  <%= link_to "", user_path(current_user), class: "fas fa-arrow-circle-left" %>
