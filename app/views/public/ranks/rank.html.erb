<div class="container">
  <div class = "title text-center">ユーザーランキング</div>
  <div class = "row pb-5">
    <div class = "col-2">
      <div class = "tab-position">
        <div class = "card">
          <div class="tab-area text-muted">
            <div class="tab active ">
              今日
            </div>
            <div class="tab">
              今週
            </div>
            <div class="tab">
              月間
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class = "col-10">
      <div class = "card">
        <div class="content-area">
          <div class="content show">
            <table class = "text-center  table table-bordered p-2">
              <% @today_ranks.each.with_index(1) do |user, i| %>
                <%= render "public/ranks/index", user: user['user'], count: user['count'], i: i %>
              <% end %>
            </table>
          </div>
          <div class="content">
             <table class = "text-center table table-bordered p-2">
              <% @week_ranks.each.with_index(1) do |user, i| %>
                <%= render "public/ranks/index", user: user['user'], count: user['count'], i: i %>
              <% end %>
            </table>
          </div>
          <div class="content">
            <table class = "text-center table table-bordered p-2">
              <% @month_ranks.each.with_index(1) do |user, i| %>
                <%= render "public/ranks/index", user: user['user'], count: user['count'], i: i %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>